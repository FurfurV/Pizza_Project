<!DOCTYPE html>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap-theme.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.slim.min.js">

<% include ../partials/head.ejs %>
<% include ../partials/navbar.ejs %>

<div class="col-sm-12">
    <div class="jumbotron">
            <form class="form-horizontal ">
                <fieldset>

                    <!-- Form Name -->
                    <legend>Pizza base</legend>

                    <!-- Select Basic -->
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="selectbasic">Crust Size</label>
                        <div class="col-md-4">
                            <form action="/myCart" method='POST'>
                            <select id="selectbasic" name="selectSize" class="form-control">

                                <% for(const crust of c) { %>
                                    <option value="<%= crust.n %>">
                                        <td class="col-sm"><%= crust.p %> euro,</td>
                                        <td class="col-sm"><%= crust.n %> size</td>
                                    </option>
                                <% } %>
                            </select>
                        </div>
                    </div>

                    <!-- Select Basic -->
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="selectbasic">Pizza sauce</label>
                        <div class="col-md-4">
                            <select id="selectbasic" name="selectSauce" class="form-control">
                                <% for(const sauce of s) { %>
                                    <option value="<%= sauce.n %>">
                                        <td class="col-sm"><%= sauce.n %></td>
                                    </option>
                                <% } %>
                            </select>
                        </div>
                    </div>

                    <!-- Select Basic -->
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="selectbasic">Crust flavour</label>
                        <div class="col-md-4">
                            <select id="selectbasic" name="selectFlavour" class="form-control">
                                <% for(const flavour of f) { %>
                                    <option value="<%= flavour.n %>">
                                        <td class="col-sm"><%= flavour.n %></td>
                                    </option>
                                <% } %>
                            </select>
                        </div>
                    </div>
                </fieldset>
            </form>


            <div class="col-sm-6">
                <div class="jumbotron">
                    <p>Vegetarian</p>

                    <table class="table table-striped table-dark">
                        <thead>
                        <tr>
                            <th class="col-sm">price</th>
                            <th class="col-sm">name</th>
                            <th class="col-sm">Select</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <% for(const vegetarian of veg) { %>
                            <td class="col-sm"><%= vegetarian.vegPrice %></td>
                            <td class="col-sm"><%= vegetarian.vegName %></td>
                            <td class="form-check"><input type="checkbox" name="vegetarian"
                                                          value="<%= vegetarian.vegName %>"></td>
                        </tr>
                        <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="jumbotron">
                    <p>Meats</p>
                    <table class="table table-striped table-dark">
                        <thead>
                        <tr>
                            <th class="col-sm">price</th>
                            <th class="col-sm">name</th>
                            <th class="col-sm">Select</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <% for(const meats of meat) { %>
                            <td class="col-sm"><%= meats.p %></td>
                            <td class="col-sm"><%= meats.n %></td>
                            <td class="form-check"><input type="checkbox" name="meats"
                                                          value="<%= meats.n %>"></td>
                        </tr>
                        <% } %>
                        </tbody>
                    </table>

                    <input type="submit" value="Add to Cart">
                </div>
            </div>
        </form>
    </div>
</div>


</main>
</body>
<div class="col-sm-12">
    <div class="jumbotron">
        <% include ../partials/footer.ejs %>
    </div>
</div>
</html>